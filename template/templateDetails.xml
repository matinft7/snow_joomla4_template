<?xml version="1.0" encoding="utf-8"?>
<extension version="5.0.1" type="template" method="upgrade">
	<name>SnowTemplate</name>
	<creationDate>2023-12-07</creationDate>
	<author>Snow</author>
	<authorEmail>matinft27@gmail.com</authorEmail>
	<copyright>Snow 2023</copyright>
	<license>GNU/GPL</license>
	<version>1.2.8</version>
	<description>
	Snow Joomla Template by @matinft7
	Set Your Global CSS to snow_template_css and make a diffrent file named based on their class like snow_CLASSNAME_css.css for having optimized css.
	override modules have webp convertor.
	</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>template_thumbnail.png</filename>
		<folder>css</folder>
		<folder>js</folder>
		<folder>html</folder>
	</files>
	<positions>
		<position>breadcrumb</position>
        <position>main_menu</position>
		<position>nav_icons</position>
		<position>logo</position>
		<position>top_content</position>
        <position>bottom_content</position>
        <position>main_content</position>
        <position>left</position>
        <position>right</position>
		<position>top</position>
		<position>footer</position>
	</positions>
	<config>
	    <fields name="params">
	        <fieldset name="basic">
			    <field name="logo" type="media" label="Logo" directory="logo" />
				<field name="fav" type="media" label="Fav Icon" directory="logo" />
				<field name="css_opt" type="list" default="" label="CSS Opt" description="Add css to style tag instead of adding files">
                    <option value="0">Disabled</option>
                    <option value="1">Enabled</option>
                </field>
				<field name="webp_gen" type="list" default="" label="Webp Generator" description="Convert images to webp">
                    <option value="0">Disabled</option>
                    <option value="1">Enabled</option>
                </field>
		    </fieldset>
        </fields>
	</config>
</extension>